<div class="card">
  <div class="card-header  flex-row justify-space-between">
    <h2>
      <a href="/post/{{post.id}}">
        <div class="col-8">{{post.title}}</div>
      </a>
    </h2>
    {{!-- Not showing user or date --}}
    <div class="col-3">Posted by {{post.user_id}} on {{post.dateCreated}}
    </div>
  </div>
  <p class="card-body">
    {{post.content}}
  </p>
</div>
<input type="hidden" name="post-id" value="{{post.id}}" />
<div class="card">
  <div class="card-header"></div>
  <form class="card-body" class="new-comment-form">
    <p class="form-label">Comment:</p>
    <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
    <button type="submit" class="btn btn-primary" id="login-form">Submit:</button>
  </form>
  {{> comments post.comments}}
</div>
<script src="/js/post.js"></script>